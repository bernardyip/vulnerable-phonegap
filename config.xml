<?xml version='1.0' encoding='utf-8'?>
<widget id="sg.edu.sg.cs5231" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Vulnerable Phonegap</name>
    <description>
        Phonegap app that is vulnerable to xss
    </description>
    <author email="support@phonegap.com">
        CS5231 Team
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-targetSdkVersion" value="23" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-contacts" spec="^2.3.1" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^6.0.8" />
    <plugin name="cordova-plugin-vulnerable" spec="https://github.com/bernardyip/phonegap-plugin.git" />
    <plugin name="cordova-plugin-crypt-file-ng" spec="git+https://github.com/qhng/cordova-plugin-crypt-file.git" />
</widget>
